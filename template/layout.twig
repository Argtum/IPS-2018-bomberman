<!DOCTYPE html>
<html>
    <head>
        <title>Bomberman</title>
        <meta charset="utf-8">
        <link rel="shortcut icon" href="web/img/bomberman.ico" type="image/x-icon">
        <link rel="stylesheet" type="text/css" href="web/styles/foundation.min.css">
        <link rel="stylesheet" type="text/css" href="web/styles/app.css">
    </head>
    <body>
        <h1 class="text-center">BOMBERMAN</h1>


        <div class="grid-x clear">
            <div class="small-6">
                <form class="login-form" method="POST">
                    <div class="login-form__field">
                        <label class="login-form__field_label" for="login-username">
                            Login
                        </label>
                        <br>
                        <input id="login-username" class="login-form__field_login" type="text">
                    </div>
                    <div class="login-form__field">
                        <label class="login-form__field_label" for="login-password">
                            Password
                        </label>
                        <br>
                        <input id="login-password" class="login-form__field_password" type="password">
                    </div>
                    <div class="login-form__button">
                        <input class="login-form__button_submit" id="login" type="submit" value="Войти">
                    </div>
                </form>
            </div>
        </div>


        <div class="grid-x clear">
            <div class="small-6">
                <form class="register-form" method="POST">
                    <div class="register-form__field">
                        <label class="register-form__field_label" for="register-username">
                            Login
                        </label>
                        <br>
                        <input id="register-username" class="register-form__field_login" type="text">
                    </div>
                    <div class="register-form__field">
                        <label class="register-form__field_label" for="register-password">
                            Password
                        </label>
                        <br>
                        <input id="register-password" class="register-form__field_password" type="password">
                    </div>
                    <div class="register-form__field">
                        <label class="register-form__field_label" for="register-confirm-password">
                            Password confirm
                        </label>
                        <br>
                        <input id="register-confirm-password" class="register-form__field_password" type="password">
                    </div>
                    <div class="register-form__button">
                        <input class="register-form__button_submit" id="login" type="submit" value="Войти">
                    </div>
                </form>
            </div>
        </div>

        <div class="grid-x clear">
            <div class="small-8">
                <article class="canvas-wrapper">
                    {% block canvas %}{% endblock %}
                </article>
            </div>
        </div>

        <script defer src="web/js/vendor/jquery.js"></script>
        <script defer src="web/js/vendor/foundation.js"></script>
        <script defer src="web/js/vendor/what-input.js"></script>
        <script defer src="web/js/app.js"></script>
        <script defer type="module" src="web/js/canvas.js"></script>
    </body>
</html>