<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="shortcut icon" href="{{ asset('img/bomberman.ico') }}" type="image/x-icon">
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block topMenu %}{% endblock %}
        <div class="container">
            <div class="row justify-content-sm-center">
                {% block logo %}{% endblock %}
                {% block body %}{% endblock %}
            </div>
        </div>
        {% block footer %}{% endblock %}
        {% block javascripts %}
            <script defer src="{{ asset('js/vendor/jquery-3.3.1.min.js') }}"></script>
            <script defer src="{{ asset('js/vendor/popper.min.js') }}"></script>
            <script defer src="{{ asset('js/vendor/bootstrap.bundle.min.js') }}"></script>
            <script defer src="{{ asset('js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
